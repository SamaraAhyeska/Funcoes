#include<stdio.h>

void P_A(double a1, double n, double vn){
double soma;
//a1 = primeiro termo.
//n n-ésimo termo.
//vn é o valor de n.

soma = (vn* (a1 + n))/2;

 printf("A soma dos %lf primeiros termos da P.A. e: %.3lf\n", vn, soma);


return soma;
}

int main (){
double a1, n, vn;

printf("digite o primeiro elemento:\n");
scanf("%lf", &a1);

printf("digite o n-esimo elemento:\n");
scanf("%lf", &n);

printf("digite o valor de n:\n");
scanf("%lf", &vn);

 P_A(a1, n, vn);

return 0;
}
